extends layout

block content
  .container(style="margin-left:60px")
    .row
      .col-2
        .sidebar.mt-5
          h4 #{project.title}
          a.active(href="#about") About
          a(href="#contact") Contact
          a(href="#donate") Donate!
      .col-lg-10
        h1.my-4.text-center #{project.title}
        hr
        .row
          .col-10.col-md-6.mr-3
            img.img-top.img-fluid.mt-5(alt='projectImg', src=project.pictureurl)
