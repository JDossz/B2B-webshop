extends layout

block content
  main.mt-5(role='main')
    // carousel for recommended projects
    #indexCarousel.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#indexCarousel' data-slide-to='0')
        li(data-target='#indexCarousel' data-slide-to='1')
        li(data-target='#indexCarousel' data-slide-to='2')
        li(data-target='#indexCarousel' data-slide-to='3')
        li(data-target='#indexCarousel' data-slide-to='4')
      .carousel-inner

        .carousel-item.active
          //- svg.bd-placeholder-img(width='100%' height='100%' xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid slice' focusable='false' role='img')
          //-   rect(width='100%' height='100%' fill='#777')
          img.img-fluid(src=`${carousel[0].pictureurl}`)
          .container
            .carousel-caption.text-left
              h1 #{carousel[0].title}
              p.shortd #{carousel[0].shortd}
              p
                a.btn.btn-lg.btn-primary(href=`/projects/${carousel[0].seo}` role='button') Learn more

        .carousel-item
          img(src=`${carousel[1].pictureurl}`)
          .container
            .carousel-caption
              h1 #{carousel[1].title}
              p.shortd #{carousel[1].shortd}
              p
                a.btn.btn-lg.btn-primary(href=`/projects/${carousel[1].seo}` role='button') Learn more

        .carousel-item
          img(src=`${carousel[2].pictureurl}`)
          .container
            .carousel-caption
              h1 #{carousel[2].title}
              p.shortd #{carousel[2].shortd}
              p
                a.btn.btn-lg.btn-primary(href=`/projects/${carousel[2].seo}` role='button') Learn more

        .carousel-item
          img(src=`${carousel[3].pictureurl}`)
          .container
            .carousel-caption
              h1 #{carousel[3].title}
              p.shortd #{carousel[3].shortd}
              p
                a.btn.btn-lg.btn-primary(href=`/projects/${carousel[3].seo}` role='button') Learn more

        .carousel-item
          img(src=`${carousel[4].pictureurl}`)
          .container
            .carousel-caption.text-right
              h1 #{carousel[4].title}
              p.shortd #{carousel[4].shortd}
              p
                a.btn.btn-lg.btn-primary(href=`/projects/${carousel[4].seo}` role='button') Learn more

      a.carousel-control-prev(href='#indexCarousel' role='button' data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#indexCarousel' role='button' data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next

    // what this page is about
    .container
      .row
        .col
          h1.text-center Our mission is to help people achieve their goals, bring creative projects to life
          h5.text-center Entryway helps scientists, artists, musicians, filmmakers, designers, and other creators find the resources and support they need to make their ideas a reality. To date, tens of thousands of creative projects — big and small — have come to life with the support of the BETAG community.
      hr.featurette-divider

    // the 3 most generous funders of the month
    .container.marketing
      .row.funders
        header
          .overlay
          video(playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop")
            source(src="/videos/Mt_Baker.mp4" type="video/mp4")
          .container.align-items-center.text-white
            .row
              .col-lg-4
                .row
                  .col.funder-picture
                    //- svg.bd-placeholder-img.rounded-circle(width='140' height='140' xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: 140x140')
                    //-   title Placeholder
                    //-   rect(width='100%' height='100%' fill='#777')
                    //-   text(x='50%' y='50%' fill='#777' dy='.3em') 140x140
                    if funders[0].pictureurl
                      img.profile-pic(src=`${funders[0].pictureurl}`)
                    else
                      img.profile-pic(src="/images/users/user_default.png")
                .row
                  .col
                    h2 #{funders[0].firstname} #{funders[0].lastname}
                    p
                      | Your limitation - it’s only your imagination.
                    p
                      if funders[0].gender == 0
                        a.btn.btn-success(href='/projects' role='button') Follow her lead &raquo;
                      else
                        a.btn.btn-success(href='/projects' role='button') Follow his lead &raquo;
              .col-lg-4
                .row
                  .col.funder-picture
                    if funders[1].pictureurl
                      img.profile-pic(src=`${funders[1].pictureurl}`)
                    else
                      img.profile-pic(src="/images/users/user_default.png")
                .row
                  .col
                    h2 #{funders[1].firstname} #{funders[1].lastname}
                    p
                      | Dream it. Wish it. Do it.
                    p
                      if funders[1].gender == 0
                        a.btn.btn-success(href='/projects' role='button') Follow her lead &raquo;
                      else
                        a.btn.btn-success(href='/projects' role='button') Follow his lead &raquo;
              .col-lg-4
                .row
                  .col.funder-picture
                    if funders[2].pictureurl
                      img.profile-pic(src=`${funders[2].pictureurl}`)
                    else
                      img.profile-pic(src="/images/users/user_default.png")
                .row
                  .col
                    h2 #{funders[2].firstname} #{funders[2].lastname}
                    p
                      | Great things never come from comfort zones.
                    p
                      if funders[2].gender == 0
                        a.btn.btn-success(href='/projects' role='button') Follow her lead &raquo;
                      else
                        a.btn.btn-success(href='/projects' role='button') Follow his lead &raquo;
      hr.featurette-divider

      // hot projects
      .row.featurette
        .col-md-7.col-sm-12
          h2.featurette-heading #{featurette[0].title}
            // span.text-muted It&rsquo;ll blow your mind.
          p.lead #{featurette[0].shortd}
          a.btn.btn-primary(href=`/projects/${featurette[0].seo}`) Tell me more
        .col-md-5.col-sm-12.justify-content.text-center
          //- svg.bd-placeholder-img.bd-placeholder-img-lg.featurette-image.img-fluid.mx-auto(width='500' height='500' xmlns='http://www.w3.org/2000/svg' preserveaspectratio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: 500x500')
          //-   title Placeholder
          //-   rect(width='100%' height='100%' fill='#eee')
          //-   text(x='50%' y='50%' fill='#aaa' dy='.3em') 500x500
          img(src=`${featurette[0].pictureurl}`)
      hr.featurette-divider

      .row.featurette
        .col-md-7.order-md-2.col-sm-12
          h2.featurette-heading #{featurette[1].title}
            // span.text-muted See for yourself.
          p.lead #{featurette[1].shortd}
          a.btn.btn-primary(href=`/projects/${featurette[1].seo}`) Tell me more
        .col-md-5.order-md-1.col-sm-12.justify-content.text-center
          img(src=`${featurette[1].pictureurl}`)
      hr.featurette-divider
      
      .row.featurette
        .col-md-7.col-sm-12
          h2.featurette-heading #{featurette[2].title}
            // span.text-muted Checkmate.
          p.lead #{featurette[2].shortd}
          a.btn.btn-primary(href=`/projects/${featurette[2].seo}`) Tell me more
        .col-md-5.col-sm-12.justify-content-center
          img(src=`${featurette[2].pictureurl}`)
      hr.featurette-divider

    // hírlevél feliratkozás
    .grid-container.mb-5
      .py8.px0.px8-md.bg-white
        h3.text-center.cooper-light Discover the best and brightest projects on Entryway.
        p.type-14.type-18-md.soft-black.text-center.my4.cooper-light
          | Sign up to receive our weekly 
          mark  Projects We Love
          |  newsletter.
        .max-w100.mx-auto.justify-content.text-center
          form(action="/thankyou" method="get")
            .flex.flex-column.flex-row-sm.items-stretch
              .grow-1.mb2.mb0-sm.mr3-sm.mr0
                .relative.smart-input-group
                  input#newsletter-signup-input.atomic-text-input(placeholder="Enter email address" type="text" value="" name="emailaddress")
                .relative.w100p
                  .h5.clip.absolute.l0.t0.w100p
                    .absolute.l0.t1.w100p
              button.btn.btn-md.btn-black.btn-dark(type="submit") Subscribe
