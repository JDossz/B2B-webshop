extends layout

block content
  .container
        .row
          .col-6.offset-3
            .card
              .card-header.bg-primary 
                h2.text-center.text-light Register
              .card-body
                form(method='post', action='/register/users')
                  .form-group
                    label(for='inputName')
                      h5  Name
                    input#inputName.form-control(type='text',name='name', placeholder='Name', required)
                  .form-group
                    label(for='inputName') 
                      h5 Address
                    input#inputName.form-control(type='text',name='address', placeholder='Address',required)
                  .form-group
                    label(for='inputEmail4')
                      h5 Email
                    input#inputEmail4.form-control(type='email',name='email', placeholder='Email', pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$", required)
                  .form-group
                    label(for='inputPassword4')
                      h5 Password
                    input#inputPassword4.form-control(type='password',name='password', placeholder='Password', pattern='(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}', title='Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters', required)
                  .form-group
                    .form-check
                      input#gridCheck.form-check-input(type='checkbox')
                      label.form-check-label(for='gridCheck')
                        | SEND ME EVERYTHING
                  button.btn.btn-primary(type='submit') Register